<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#ffcbcbcb"
                android:centerColor="#ffcbcbcb"
                android:centerY="0.75"
                android:endColor="#ffcbcbcb"
                android:angle="270"
                />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <gradient
                    android:startColor="#8aba61"
                    android:endColor="#8aba61"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>